    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run format",
      "eslint --fix",
      "npm test -- --bail --findRelatedTests --passWithNoTests --coverage --collectCoverageFrom='src/**/*.{js,jsx,ts,tsx}' --coverageThreshold='{\"global\":{\"statements\":0,\"branches\":0,\"functions\":0,\"lines\":0}}'"
    ],
    "*.less": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "overrides": {
    "whatwg-url": "^14.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "scripts": {
    "build": "vite build",
    "build-storybook": "storybook build",
    "dev": "vite",
    "format": "prettier --write .",
    "lint": "eslint . && stylelint '**/*.less' --fix",
    "prepare": "husky install",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "jest"
  }
